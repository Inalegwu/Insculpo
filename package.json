{
  "name": "Insculpo",
  "description": "The note taking app focused on simplicity",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/Inalegwu/ElectroStatic.git"
  },
  "main": "out/main/main.js",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "prebuild": "electron-vite build",
    "build": "pnpm exec electron-builder",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "postinstall": "electron-rebuild"
  },
  "build": {
    "appId": "com.electrostatic.app",
    "productName": "ElectroStatic",
    "artifactName": "${product_name}-${version}_${platform}_${arch}.${ext}",
    "buildDependenciesFromSource": true,
    "icon": "assets/icon.png",
    "files": [
      "out/**/*"
    ],
    "directories": {
      "output": "release/${version}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@legendapp/state": "^2.1.4",
    "@phosphor-icons/react": "^2.0.15",
    "@radix-ui/themes": "^2.0.3",
    "@tanstack/react-query": "^4.0.0",
    "@tanstack/react-router": "^1.12.12",
    "@trpc/client": "^10.44.1",
    "@trpc/react-query": "^10.44.1",
    "@trpc/server": "^10.44.1",
    "electron-trpc": "^0.5.2",
    "framer-motion": "^11.1.7",
    "pouchdb-find": "^8.0.1",
    "pouchdb-node": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.12",
    "react-hot-toast": "^2.4.1",
    "sort-by": "^1.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@tanstack/router-devtools": "^1.12.13",
    "@tanstack/router-vite-plugin": "^1.12.8",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.3",
    "@types/pouchdb-node": "^6.1.7",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "typescript": "^5.3.2",
    "unocss": "^0.58.3",
    "vite": "^5.0.12"
  }
}
